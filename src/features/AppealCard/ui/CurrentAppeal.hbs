<main class="support-chat__content">
    <div class="support-chat__messages" id="messages">
        {{#each messages}}
        <div class="support-chat__message support-chat__message--{{sender}}">
            <div class="support-chat__bubble">
                {{{this.message}}}
            </div>
            <div class="support-chat__time">{{displayTime}}</div>
        </div>
        {{/each}}
    </div>

    <div class="support-chat__reply" id="reply-container" hidden>
        <textarea
            id="reply-text"
            class="support-chat__reply-input"
            placeholder="Type your reply..."
            rows="3"
        ></textarea>
        <button id="send-reply" class="support-chat__send-btn">Send</button>
    </div>

    <div class="support-chat__actions">
        <button class="support-chat__action-btn" id="close-button" title="Close appeal">
            I'm satisfied with the answer
        </button>
        <button class="support-chat__action-btn" id="reply-button" title="Reply">
            My problem is not solved
        </button>
    </div>
</main>