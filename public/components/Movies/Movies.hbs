<div class="movies-container">
    <h2>Популярные фильмы</h2>
    <div class="movies-grid">
        {{#each films}}
            <div class="movie-card">
                <img src="{{poster}}" alt="{{title}}" width="200">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
                <button class="watch-btn">Смотреть</button>
            </div>
        {{/each}}
    </div>
</div>